{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
          "version": "detect"
        }
    },
    "ignorePatterns": [
         "**/build/**"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error","tab"],
        "no-var": "error",
        "no-multi-spaces": "error",
        "no-trailing-spaces": "error",
        "react/react-in-jsx-scope": "off",
        "react/jsx-uses-react": "off"
    }
}
// More Rules can be found at: https://eslint.org/docs/latest/rules
